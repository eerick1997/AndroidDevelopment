<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/next_meal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/next_meal_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="@string/next_order"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/next_meal_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/next_meal_title"
        app:layout_constraintBottom_toTopOf="@id/meal_buttons_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        tools:text="🍞🧀"
        />

    <LinearLayout
        android:id="@+id/meal_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next_meal_textview"
        app:layout_constraintBottom_toTopOf="@id/deliver_button"
        android:orientation="vertical">
        <Button
            android:id="@+id/food_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            tools:text="🧀"
            />
        <Button
            android:id="@+id/food_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            tools:text="🥩"
            />
        <Button
            android:id="@+id/food_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            tools:text="🍞"
            />
    </LinearLayout>

    <Button
        android:id="@+id/deliver_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="24sp"
        android:backgroundTint="?attr/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/meal_buttons_container"
        app:layout_constraintBottom_toTopOf="@id/score_count_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/deliver_order_button"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/score_count_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/deliver_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Score: 0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

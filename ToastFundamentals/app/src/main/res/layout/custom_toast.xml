<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/clToast"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_green_dark"
    android:padding="16dp">

    <ImageView
        android:id="@+id/toastIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toastText"/>

    <TextView
        android:id="@+id/toastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a custom toast"
        app:layout_constraintTop_toTopOf="@id/toastIcon"
        app:layout_constraintStart_toEndOf="@id/toastIcon"
        app:layout_constraintBottom_toBottomOf="@id/toastIcon"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>